<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-12 ulist">
      <div class="card col-5 offset-3">
        <h3><%= listing.title %></h3>

        <img
          class="card-img-top show-img"
          alt="Listing Image"
          src="<%= listing.image %>"
        />
        <div class="card-body">
          <p class="card-text mb-3">
            <br />
            <%= listing.description %> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
            <%= listing.location %><br />
            <%= listing.country %><br />
          </p>
        </div>
      </div>
      <div class="offset-3">
        <a
          class="cols btn btn-outline-danger"
          href="/listings/<%=listing._id%>/edit "
          >Edit this Listing</a
        >
        <br /><br />
        <form
          action="/listings/<%= listing._id %>?_method=Delete"
          method="post"
        >
          <button class="cols btn btn-danger">Delete this Listing</button>
        </form>
      </div>
    </div>
    <div class="col-6 mt-5">
      <hr />
      <h3>Leave a Review</h3>
      <form
        action="/listings/<%= listing.id %>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div>
          <label class="form-label" for="rating">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div>
          <label class="form-label" for="comment">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Comments Neccessary</div>
        </div>
        <button class="btn btn-outline-primary mt-3 mb-4">submit</button>
      </form>
      <hr />
      <p>All Reviews</p>
      <div class="row">
        <% for (let review of listing.reviews) { %>
        <div class="card listing-card col-6 mr-3>
          <div class="card-body">
            <h5 class="card-title">Jane Doe</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %></p>
          <form action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE" class="mb-3" method="post" >
            <button class="btn btn-sm  btn-danger">Delete Review</button>
          </form>
          </div>
        <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
